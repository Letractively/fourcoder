<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" ><sqlMap><resultMap class="com.fly.biz.common.model.item.ItemDO" id="ItemDOMap"><result column="item_id" property="itemId" /><result column="item_name" property="itemName" /><result column="item_title" property="itemTitle" /><result column="item_pic_url" property="itemPicUrl" /><result column="item_price" property="itemPrice" /><result column="share_num" property="shareNum" /><result column="hit_num" property="hitNum" /><result column="cat_id" property="catId" /><result column="attribute" property="attribute" /></resultMap>    <!-- 根据商品名获得商品对象 -->   <select id="ItemDAO.getItemByName"  parameterClass="String"  resultMap="ItemDOMap">		select * from item where item_name=#value#  </select>     <!-- 根据商品id获得商品对象 -->    <select id="ItemDAO.getItemById" parameterClass="long" resultMap="ItemDOMap">		select * from item where item_id=#value#  </select>      <!-- 新增商品对象 -->   <insert id="ItemDAO.insertItem" >		insert into item 				(item_id,item_name,item_title,item_pic_url,item_price,share_num,hit_num,cat_id,attribute) 			values 				(#itemId#,#itemName#,#itemTitle#,#itemPicUrl#,#itemPrice#,#shareNum#,#hitNum#,#catId#,#attribute#)   </insert>      <!-- 删除商品对象 -->   <delete id="ItemDAO.deleteItem" parameterClass="long">		delete from item where item_id=#value#   </delete>      <!-- 更新商品对象 -->   <update id="ItemDAO.updateItem">		 update item set 			item_name=#itemName#,			item_title=#itemTitle#,			item_pic_url=#itemPicUrl#,			item_price=#itemPrice#,			cat_id=#catId#,			attribute=#attribute# 		where item_id=#itemId#   </update>      <!-- 更新商品对象分享次数 -->   <update id="ItemDAO.updateItemShareNum">		update item set 			share_num=#value#		where item_id=#itemId#   </update>        <!-- 更新商品对象点击次数 -->    <update id="ItemDAO.updateItemHitNum" >		update item set 			hit_num=#value#		where item_id=#itemId#   </update></sqlMap>